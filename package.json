{
  "name": "vl-ui-form-grid",
  "version": "3.0.4",
  "description": "De vl-form-grid webcomponent maakt heb mogelijk om opmaak te geven aan formulieren",
  "author": "DIDM",
  "license": "MIT",
  "main": "./src/index.js",
  "exports": {
    "require": "./index.js",
    "import": "./src/index.js",
    "node": "./index.js",
    "default": "./index.js"
  },
  "homepage": "https://github.com/milieuinfo/webcomponent-vl-ui-form-grid#readme",
  "bugs": {
    "url": "https://github.com/milieuinfo/webcomponent-vl-ui-form-grid/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/milieuinfo/webcomponent-vl-ui-form-grid.git"
  },
  "publishConfig": {
    "registry": "http://artifactory-pr-build.lb.cumuli.be:8081/artifactory/api/npm/acd-npm/"
  },
  "scripts": {
    "prepare": "npm update --dev vl-ui-util && npm run prepare:util",
    "prepare:util": "npm explore vl-ui-util -- npm run util",
    "test": "npm run test:unit && npm run test:e2e",
    "test:unit": "wct --config-file ./wct.local.conf.json",
    "test:e2e": "npm run test:server:start && npm run test:e2e:chrome && npm run test:e2e:firefox",
    "test:e2e:grid": "npm run test:server:start && npm run test:e2e:chrome:grid && npm run test:e2e:firefox:grid",
    "test:grid": "wct --config-file ./wct.docker.conf.json && npm run test:e2e:grid",
    "posttest:e2e": "pkill -f http-server",
    "test:e2e:chrome": "mocha --chrome",
    "test:e2e:chrome:grid": "mocha --chrome --grid",
    "test:e2e:firefox": "mocha --firefox",
    "test:e2e:firefox:grid": "mocha --firefox --grid",
    "test:e2e:opera": "mocha --opera",
    "test:e2e:safari": "mocha --safari",
    "test:server:start": "http-server &",
    "release": "np",
    "release:prepare": "npm explore vl-ui-util -- npm run release-component:prepare $(pwd) form-grid",
    "release:testless": "np --yolo",
    "demo": "http-server"
  },
  "dependencies": {
    "vl-ui-core": "^5.5.1",
    "vl-ui-grid": "^3.0.0"
  },
  "peerDependencies": {
    "vl-ui-core": "^5.5.1",
    "vl-ui-grid": "^3.0.0"
  },
  "devDependencies": {
    "@govflanders/vl-ui-core": "3.9.1",
    "vl-ui-button": "^5.0.0",
    "vl-ui-checkbox": "^3.0.0",
    "vl-ui-form-message": "^5.0.0",
    "vl-ui-input-field": "^3.0.0",
    "vl-ui-textarea": "^3.0.0",
    "vl-ui-util": "^5.2.3"
  }
}
